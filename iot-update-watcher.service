[Unit]
Description=IoT Update Watcher (event-driven fetch+publish)
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=jose
Group=jose
WorkingDirectory=/home/jose/iot_publisher
EnvironmentFile=/home/jose/iot_publisher/.env
ExecStart=/home/jose/iot_publisher/bin/watcher.sh
Restart=always
RestartSec=2
# Opcional: l√≠mites para evitar loops ruidosos
StartLimitIntervalSec=60
StartLimitBurst=10

[Install]
WantedBy=multi-user.target
